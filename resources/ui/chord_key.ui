<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ChordKeyWidget" parent="GtkGrid">
    <child>
      <object class="GtkLabel" id="chord_lbl">
        <property name="label" translatable="yes">Amin 7</property>
        <property name="ellipsize">end</property>
        <property name="xalign">0</property>
        <property name="margin-start">3</property>
        <layout>
          <property name="column">1</property>
          <property name="column-span">2</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="btn_box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <child>
          <object class="GtkButton" id="choose_chord_btn">
            <property name="focusable">1</property>
            <property name="receives_default">1</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">minuet-scales</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="invert_prev_btn">
            <property name="focusable">1</property>
            <property name="receives_default">1</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">go-previous</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="invert_next_btn">
            <property name="focusable">1</property>
            <property name="receives_default">1</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">go-next</property>
              </object>
            </child>
          </object>
        </child>
        <layout>
          <property name="column">2</property>
          <property name="column-span">2</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="piano_box">
        <property name="orientation">vertical</property>
        <child>
          <placeholder/>
        </child>
        <layout>
          <property name="column">1</property>
          <property name="row">2</property>
          <property name="column-span">3</property>
        </layout>
      </object>
    </child>
  </template>
</interface>
